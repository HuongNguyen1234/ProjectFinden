<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroudBlue"
    tools:context="com.example.projectfinden.com.activity.ChoiceEducateActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="270dp"
        android:layout_height="142dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="82dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonStudyEducate"
        style="@style/AppTheme.RoundedCornerMaterialButton"
        android:layout_width="351dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="29dp"
        android:background="#FFFFFF"
        android:text="Học sơ cấp cứu"
        android:textColor="#0F73AD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image" />

    <Button
        android:id="@+id/buttonGame"
        style="@style/AppTheme.RoundedCornerMaterialButton"
        android:layout_width="351dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="29dp"
        android:background="#FFFFFF"
        android:text="Game vui"
        android:textColor="#0F73AD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image" />


</RelativeLayout>
