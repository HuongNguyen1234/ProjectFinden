<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvD"
        android:layout_width="204dp"
        android:layout_height="85dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="552dp"
        android:layout_x="146dp"
        android:layout_y="469dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvB"
        android:layout_width="212dp"
        android:layout_height="85dp"
        android:layout_above="@+id/tvC"
        android:layout_alignParentEnd="true"
        android:layout_x="146dp"
        android:layout_y="252dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tvC"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvQuestionContent"
        android:layout_width="218dp"
        android:layout_height="90dp"
        android:layout_above="@+id/tvA"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_x="143dp"
        android:layout_y="19dp"
        android:text="tvQuestionContent"
        app:layout_constraintBottom_toTopOf="@+id/tvA"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvAnswer"
        android:layout_width="91dp"
        android:layout_height="123dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="276dp"
        android:layout_x="49dp"
        android:layout_y="239dp"
        android:text="tvAnswer"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvA"
        android:layout_width="211dp"
        android:layout_height="81dp"
        android:layout_above="@+id/tvB"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:layout_x="143dp"
        android:layout_y="140dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tvB"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvC"
        android:layout_width="205dp"
        android:layout_height="87dp"
        android:layout_above="@+id/tvD"
        android:layout_alignParentEnd="true"
        android:layout_x="149dp"
        android:layout_y="361dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/tvD"
        app:layout_constraintEnd_toEndOf="parent" />
</AbsoluteLayout>
